# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development

# ============================================
# DATABASE
# ============================================
POSTGRES_USER=paychain_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=paychain_db
DATABASE_URL=postgresql+asyncpg://paychain_user:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/paychain_db

# ============================================
# JWT AUTHENTICATION
# ⚠️  CRITICAL: Generate new secret with: openssl rand -hex 32
# ============================================
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# SERVICE API KEYS (Inter-service communication)
# ⚠️  Generate new keys with: openssl rand -hex 16
# ============================================
USER_SERVICE_API_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_16
JOB_SERVICE_API_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_16
PAYMENT_SERVICE_API_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_16

# ============================================
# SERVICE URLS
# ============================================
USER_SERVICE_URL=http://user-service:8000
JOB_SERVICE_URL=http://job-service:8000
PAYMENT_SERVICE_URL=http://payment-service:8000
WS_SERVICE_URL=http://websocket-server:8000

# ============================================
# BLOCKCHAIN
# ⚠️  CRITICAL: Use separate wallet for production!
# ⚠️  NEVER commit private keys to git!
# ============================================
GANACHE_URL=http://ganache:8545
CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
# For development only - Ganache test account (DO NOT USE IN PRODUCTION)
PLATFORM_PRIVATE_KEY=CHANGE_ME_USE_SEPARATE_PRODUCTION_WALLET
CHAIN_ID=1337
NETWORK_ID=1337

# ============================================
# FRONTEND
# ============================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8080
VITE_ENVIRONMENT=development

# ============================================
# CORS
# ⚠️  Production: Use specific domain, not wildcards
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379
# Optional: Add password in production
# REDIS_URL=redis://:STRONG_PASSWORD@redis:6379

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=10

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO

# ============================================
# PRODUCTION CHECKLIST
# ============================================
# [ ] Replace all CHANGE_ME values
# [ ] Generate new JWT_SECRET_KEY
# [ ] Generate new service API keys
# [ ] Use production database password
# [ ] Configure production blockchain wallet
# [ ] Update CORS_ALLOWED_ORIGINS with production domain
# [ ] Enable HTTPS/TLS
# [ ] Set up secret rotation schedule
# [ ] Configure backup and disaster recovery
